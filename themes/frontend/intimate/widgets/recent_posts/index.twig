
<div class="entry-widget">
		<h5 class="widget-title">{{ widget.title }}</h5>

		<!-- Tab Panels -->
		<div class="tab-content">
			<!-- Tab Content 1 -->
			<div class="tab-pane active" id="tab1">
				<ul class="posts-list">
                {% for post in posts %}
					<li>
						<div class="widget-thumb">
							<a href="/blog/{{ post.alias }}">
								<img style="max-width:70px;max-height:auto" alt="70" src="{{ post.image }}">
							</a>
						</div>

						<div class="widget-content">
							<a href="/blog/{{ post.alias }}">{{ post.title }}</a>
							<div class="meta">
								<span>
                                    <i class="ico-calendar-alt-fill"></i>
								    {{ post.published_at | moment }}
                                </span>

								<span>
                                    <i class="ico-tag"></i>
                                    Technology
                                </span>
							</div>
						</div>
						<div class="clearfix"></div>
					</li>
                    {% endfor %}
				</ul>
			</div>
			
			<a class="btn btn-common more" href="#">More
			Stories <i class="ico-arrow-right"></i></a>
		</div>
		<!-- End Tab Panels -->
	</div>